{
  "apiVersion": 3,
  "name": "custom/animated-banner",
  "version": "1.1.0",
  "title": "Animated Banner",
  "category": "design",
  "icon": "slides",
  "description": "A reusable animated hero banner with optional metrics and marquee.",
  "keywords": ["banner", "animation", "hero", "metrics", "marquee"],
  "supports": {
    "html": false,
    "align": ["wide", "full"]
  },
  "editorScript": "file:./edit.js",
  "editorStyle": "file:./editor.css",
  "style": "file:./style.css",
  "script": "file:./front.js",
  "render": "file:./render.php",
  "attributes": {
    "headline": {
      "type": "string",
      "default": "Title Text Here"
    },
    "subheadline": {
      "type": "string",
      "default": "Sample subheadline text goes here."
    },
    "backgroundImage": {
      "type": "string",
      "default": ""
    },
    "animateOnce": {
      "type": "boolean",
      "default": true
    },
    "showMarquee": {
      "type": "boolean",
      "default": true
    },
    "marqueeSpeed": {
      "type": "number",
      "default": 20
    },
    "marqueeDirection": {
      "type": "string",
      "enum": ["left", "right"],
      "default": "left"
    },
    "metrics": {
      "type": "array",
      "default": [
       {
          "icon": "camera",
          "label": "Ett nätverk av",
          "number": 150,
          "suffix": " FOTOGRAFER",
          "sub": "Tillgängliga året runt",
          "decimals": 0
        },
        {
          "icon": "home",
          "label": "Vi levererar bildmaterial till",
          "number": 30,
          "suffix": "% AV MARKNADEN",
          "sub": "På landets största plattformar",
          "decimals": 0
        },
        {
          "icon": "money",
          "label": "Vi skapade intäkter på",
          "number": 70,
          "suffix": " MILJONER KR",
          "sub": "För kreatörer i vårt nätverk",
          "decimals": 0
        }
      ]
    }
  }
}